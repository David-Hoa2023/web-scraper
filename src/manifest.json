{
  "manifest_version": 3,
  "name": "Web Scraper Pro",
  "version": "1.0.0",
  "description": "Pattern-matching DOM scraper with auto-scrolling and data extraction",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "notifications",
    "sidePanel",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Web Scraper Pro"
  },
  "side_panel": {
    "default_path": "src/ui/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/*.json"],
      "matches": ["<all_urls>"]
    }
  ]
}